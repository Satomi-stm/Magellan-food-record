<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="UTF-8">
        <title>Mazellan Food Record</title>
        <link rel="stylesheet" href="information.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>

    <body>

        <header>
            <h1 class="title">Mazellan</h1>
            <nav class="nav">
                <ul class="menu-group">
                    <li class="menu-item"><a href="/login">新規登録</a></li>
                    <li class="menu-item"><a href="/login">ログイン</a></li>
                </ul>
            </nav>
        </header>

            <form action="/testpost" method="post" enctype = "multipart/form-data" class="record-information">
                <!-- 国名 -->
                <select class="form-select" aria-label="Default select example" name="country">

                    <option selected>国名</option>
                    <option value="1">スペイン</option>
                    <option value="2">フランス</option>
                    <option value="3">日本</option>
                  </select>

                <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">店名</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Example input placeholder" name="restaurant">
                  </div>

                  <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">場所</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Example input placeholder" name="place">
                  </div>

                  <div class="mb-3">
                    <label for="formGroupExampleInput2" class="form-label">料理名</label>
                    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input placeholder" name="food">
                  </div>
                  <div class="mb-3">
                    <label for="formGroupExampleInput2" class="form-label">感想</label>
                    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input placeholder" name="comment">
                  </div>

                  <!-- 画像ファイル -->
                  <div class="mb-3">
                    <label for="formFile" class="form-label">写真</label>
                    <input class="form-control" type="file" name="image" accept="image/*" onchange="previewFile(this);"　id="formFile"　>
                  </div>

                  <!-- 画像のプレビュー -->
                  <div class="form-group">
                    <img id="preview">
                    <script>
                      function previewFile(hoge){
                        const fileData = new FileReader();
                        fileData.onload = (function(){
                          document.getElementById('preview').src = fileData.result;
                        });
  
                        fileData.readAsDataURL(hoge.files[0]);
                      }
                    </script>
                  </div>
  

                  <!-- 送信ボタン -->
                  <div class="d-grid gap-2 col-6 mx-auto">
                    <button class="btn btn-primary" type="button">送信</button>
                  </div>
            </form>

    </body>
</html>